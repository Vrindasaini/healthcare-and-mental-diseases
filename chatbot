      }

      .bot-message {
        background-color: #00b4d8;
        color: white;
        align-self: flex-start;
      }

      .user-message {
        background-color: #e0e0e0;
        color: #333;
        align-self: flex-end;
      }

      input[type="text"] {
        padding: 1rem;
        font-size: 1rem;
        width: calc(100% - 2rem);
        border-radius: 15px;
        border: 2px solid #0077b6;
        outline: none;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      }

      input[type="text"]:focus {
        border-color: #00b4d8;
      }

      button {
        padding: 1rem;
        background-color: #0077b6;
        color: white;
